	field(LOPR, "100")
	field(HOPR, "60000")
}

record(bo, "$(P)$(R)KEEPALIVE"){
	field(DESC, "Keep alive for counter purposes")
	field(DTYP, "stream")
	field(OUT, "@scu.proto keepAlive($(P)$(R)) $(PORT)")
