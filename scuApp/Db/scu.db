#--- Initialization related records ---
record(stringin, "$(P)$(R)DEVICE_IDENTIFICATION"){
	field(DESC, "Device identification")
	field(DTYP, "stream")
	field(SCAN, "I/O Intr")
	field(PINI, "NO")
	field(INP, "@scu.proto I($(P)$(R)) $(PORT)")
}

record(stringin, "$(P)$(R)ID"){
	field(DESC, "Device ID number")
	field(DTYP, "stream")
	field(SCAN, "I/O Intr")
	field(PINI, "NO")
	field(INP, "@scu.proto GID($(P)$(R)) $(PORT)")
}

record(stringin, "$(P)$(R)FIRMWARE_VERSION"){
	field(DESC, "Firmware version")
	field(DTYP, "stream")
	field(SCAN, "I/O Intr")
	field(PINI, "NO")
	field(INP, "@scu.proto V($(P)$(R)) $(PORT)")
}

record(bo, "$(P)$(R)DEVICE_RESET"){
	field(DESC, "Device reset")
	field(DTYP, "stream")
	field(ZNAM, "Not reset")
	field(ONAM, "Reset")
	field(OUT, "@scu.proto R $(PORT)")
}
#--- Configuration related records ---
record(mbbo, "$(P)$(R)CHANNEL"){
	field(DESC, "Channel index")
	field(DTYP, "Soft Channel")
	field(ZRVL, "0")
	field(ONVL, "1")
	field(TWVL, "2")
	field(ZRST, "Channel 0")
	field(ONST, "Channel 1")
	field(TWST, "Channel 2")
}

record(longout, "$(P)$(R)STEPS"){
	field(DESC, "Number of steps 1-30000")
	field(DTYP, "Soft Channel")
	field(HOPR, "30000")
	field(LOPR, "1")
	field(EGU, "steps")
}

record(ao, "$(P)$(R)AMPLITUDE"){
	field(DESC, "Amplitude - tenths of Volts")
	field(DTYP, "Soft Channel")
	field(EGU, "V")
	field(LINR, "LINEAR")
	field(ESLO, "0.1")
	field(DRVL, "150")
	field(DRVH, "1000")
	field(PREC, "1")
}

record(ao, "$(P)$(R)FREQUENCY"){
	field(DESC, "Frequency")
	field(DTYP, "Soft Channel")
	field(EGU, "Hz")
	field(DRVL, "1")
	field(DRVH, "18500")
}

record(bo, "$(P)$(R)SET_STEP_PARAMETERS"){
	field(DESC, "Sets step parameters. No move")
	field(DTYP, "stream")
	field(OUT, "@scu.proto setStepParameters($(P)$(R)) $(PORT)")
}
#--- Movement control commands ---
record(bo, "$(P)$(R)MOVEUP"){
	field(DESC, "Move up")
